#include <bits/stdc++.h>
  
using namespace std;
 
int main(int argc, char** argv)
{
int i,index,j,max,len,pos,number;
string s;
cin>>s;
len=s.length();
for(i=len-1;i>=1;i--){
    if(s[i]>s[i-1]){
        index=i-1;
        number=s[i-1];
        max=58;
        for(j=i;j<len;j++){
            if(s[j]>number && s[j]<max){
                max=s[j];
                pos=j;
            }
        }
        swap(s[index],s[pos]);
        reverse(s.begin()+1+index,s.end());
        break;
    }
}
cout<<s;
 
}
