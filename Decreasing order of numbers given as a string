#include <iostream>
#include <string>
#include <sstream>

int main() {
    std::string base;
	std::cin>>base;
	int t=base.length()/2; // first I had kept it as one and went increasing the size. But then had cases like 765764763, then going 
	int i=0;	       // considers it as the series 7 6 5.....
	bool diff=false;
	int temp1=0,temp2=0;
	while(true){
	    temp1=0,temp2=0;
	    while(i<t){
	        temp1*=10;
	        temp1 += base[i]-'0';
	        i++;
	    }
	    /*
			    if(base[i]=='0'){      //This aint needed while t is going from base.length()/2 to 0.
				t--;
				i=0;
				continue;
			    }
	    */
	    while(i<2*t){
	        temp2*=10;
	        temp2 += base[i]-'0';
	        if(temp1-temp2==2 || temp1-temp2==1) break;
	        i++;
	    }
	    if(temp2!=0 && temp1-temp2==1){
	        diff=true;
	        break;
	    }
	    else if(temp2!=0 && temp1-temp2==2){
	        diff=false;
	        break;
	    }
	    else{
	        t--;
	        i=0;
	    }
	}
	if(diff==false){
	    std::cout<<temp1-1;    
	}
	else{
	    std::string buf;
	    while(true){
    	    std::stringstream conv; // also sprintf can be used 
    	    conv << temp1-2;
    	    buf = conv.str();
    	    if(base.find(buf)<base.length()){
    	       temp1--;
    	       continue; 
    	    }
    	    else break;
	    }
	    std::cout<<buf;
	}
	return 7;
}
