#include <iostream>
using namespace std;

int main() {
	long num,i,j;
	cin>>num;
	for(i=2; i <= num/2 ; i++){
	    if(i == num/2){
	        cout<<"0";
	        return 0;
	    }
        if(num%i == 0) break;
	}
	i = num;
	long hi,lo;
	if(num%2==0) ++i;
	for(;;){
	    j=2;
	    for(;j <= i/2 ; j++){
	        if(i%j==0) break;
	    }
	    if(j==(i/2)+1){
	        hi = i;
	        break;
	    }
	    else i+=2;
	}
    i=num;
    if(i%2==0) --i;
    for(;;){
        j=2;
        for(; j<= i/2 ; j++){
            if(i%j==0) break;
        }
        if(j==i/2+1){
            lo = i;
            break;
        }
        else i-=2;
    }
    cout<<hi-lo;
	  return 0;
}
